<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolhaDoVilaoActivity">


    <LinearLayout
        android:id="@+id/grupoImgeTxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/DarkViolet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTituloHerois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            android:text="Escolha um Vilao"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagemVilaoPrincipal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/descricaoVilaoPrincipal"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            android:background="@color/grey11"
            android:text="Descrição \n do Heroi \n nome: tal"
            android:textSize="20dp" />

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/simbolocoringa"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/simbolocoringa" />

                <ImageView
                    android:id="@+id/simbolomagneto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/simbolomagneto" />

                <ImageView
                    android:id="@+id/simbololexlutor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/lexlutor" />

                <ImageView
                    android:id="@+id/simboloflexreversso"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/simboloflexreversso" />

                <ImageView
                    android:id="@+id/simbolovenon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/venon" />

                <ImageView
                    android:id="@+id/simbolomuhergato"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/simbolomuhergto" />

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnEscolhaVilao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Esolha"
            android:textSize="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hounds"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomeLuta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome Heroi"
                        android:textColor="@color/Gold"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHeroi"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            app:srcCompat="@drawable/lanternaverde" />

                        <TextView
                            android:id="@+id/acaoDoHeroi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O heroi fez o ataque"
                            android:textColor="@color/white"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Nome Vilao "
                        android:textColor="@color/DarkMagenta"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/acaoDoVilao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O vilao fez o ataque"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/imgVilao"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            app:srcCompat="@drawable/venoncorpo" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/lanternaverde" />

                    <TextView
                        android:id="@+id/vidaHeroi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida 80"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/vidaVilao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vida 80 "
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/venoncorpo" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</com.google.android.material.card.MaterialCardView>

